
@{
    ViewBag.Title = "ViewRRQ";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}


@section scripts{
    <script src="~/Scripts/AngularControllers/QuestionBankController.js"></script>
}
<div data-ng-controller="QuestionCntrl" data-ng-init="GetQuestionDetails()">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Displaying RRQ
            <small>Displaying RRQ-001</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li><a href="#">RRQ</a></li>
        </ol>
    </section>

    <!-- Form Body (Page body)-->
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-hover table-bordered">
                            <tbody ng-repeat="Q in QuestionList | startFrom:currentPage*RRQpageSize | limitTo:RRQpageSize">
                                <tr>
                                    <td>
                                        <div class="callout callout-danger" style="height:100px;">
                                           <h2>Q-{{currentPage+1}}. <span><strong>{{Q.Question.QuestionText}}</strong></span></h2>
                                        </div>                                        
                                    </td>                                    
                                </tr>
                                <tr>
                                    <td colspan="3">
                                        <div style="margin-left:50px;" ng-repeat="O in Q.Options" class="callout callout-success">
                                           <h4>{{$index+1}}. {{O.OptionText}}</h4>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        @*<button class="btn btn-flat" ng-disabled="currentPage == 0" ng-click="currentPage=currentPage-1">
                            Previous
                        </button>*@
                        @*{{currentPage+1}}/{{RRQnumberOfPages()}}*@
                        <button class="btn btn-flat" ng-disabled="currentPage >= data.length/pageSize - 1" ng-click="currentPage=currentPage+1">
                            Next
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>



