
@{
    ViewBag.Title = "ViewRRQ";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}


@section scripts{
    <script src="~/Scripts/AngularControllers/QuestionBankController.js"></script>
}
<div data-ng-controller="QuestionCntrl" data-ng-init="GetRRQQuestionDetails()">
    <!-- Form Body (Page body)-->

    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-hover table-bordered">
                    <tbody ng-repeat="Q in RRQQuestionList | startFrom:currentPage*RRQpageSize | limitTo:RRQpageSize">
                        <tr>
                            <td>
                                <div class="callout callout-danger" style="height:200px;">
                                    <h2>Q-{{currentPage+1}}. <span><strong>{{Q.Question.QuestionText}}</strong></span></h2>
                                </div>
                                <div style="height:30px; border:1px solid #808080;">
                                    <div class="col-lg-12 text-center" style="font-size:20px; font-weight:bold;">Choose your options within <span style="color:darkred" id="time"></span> minutes!</div>
                                </div>
                            </td>
                        </tr>
                        <tr ng-if="DisplayOption=='True'">
                            <td colspan="3">
                                <div style="margin-left:50px;" ng-repeat="O in Q.Options" class="callout callout-success">
                                    <h4>{{$index+1}}. {{O.OptionText}}</h4>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
                @*<button class="btn btn-flat" ng-disabled="currentPage == 0" ng-click="currentPage=currentPage-1">
                        Previous
                    </button>*@
                @*{{currentPage+1}}/{{RRQnumberOfPages()}}*@
                <button class="btn btn-info" ng-click="DisplayOptions()">
                    Show/Start
                </button>
                <button class="btn btn-warning" ng-click="StopQuestion()">
                    Stop
                </button>
                <button class="btn btn-success" ng-disabled="currentPage >= data.length/pageSize - 1" ng-click="NextQuestion()">
                    Next
                </button>
                <button class="btn btn-danger" ng-disabled="currentPage < data.length/pageSize -1" ng-click="EndRRQ()">
                    End
                </button>
            </div>
        </div>
    </div>
</div>

