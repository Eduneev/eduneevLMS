
@{
    ViewBag.Title = "AddQuestion";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}


@section scripts{
    <script src="~/Scripts/AngularControllers/QuestionBankController.js"></script>
}

<style>
    .form-group input[type="checkbox"] {
        display: none;
    }

        .form-group input[type="checkbox"] + .btn-group > label span {
            width: 20px;
        }

            .form-group input[type="checkbox"] + .btn-group > label span:first-child {
                display: none;
            }

            .form-group input[type="checkbox"] + .btn-group > label span:last-child {
                display: inline-block;
            }

        .form-group input[type="checkbox"]:checked + .btn-group > label span:first-child {
            display: inline-block;
        }

        .form-group input[type="checkbox"]:checked + .btn-group > label span:last-child {
            display: none;
        }
</style>

<div ng-controller="QuestionCntrl">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            New Question
            <small>Add new question</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li><a href="#">New Student</a></li>
            @*<li class="active">Add Course</li>*@
        </ol>
    </section>

    <!-- Form Body (Page body)-->
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <div class="pull-left">
                    <button type="button" class="btn btn-success" id="btnViewCenters">
                    <i class="glyphicon glyphicon-list"> </i>&nbsp; View Questions</button>
                </div>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Question Text</label>
                            <textarea ng-model="QuestionText" rows="4" name="QuestionText" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter question text...">  </textarea>                           
                        </div>
                            <div class="form-group">
                                <label>
                                    Enter answer text and select correct answer text 
                                </label>
                            </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-lg-2">
                                    <input type="checkbox" ng-model="IsOption1Correct" class="minimal-red" data-toggle="modal" name="fancy-checkbox-primary1" id="fancy-checkbox-primary1" autocomplete="off">
                                    <div class="btn-group pull-right">
                                        <label for="fancy-checkbox-primary1" class="btn btn-primary">
                                            <span class="glyphicon glyphicon-ok"></span>
                                            <span> </span>
                                        </label>
                                        <label for="fancy-checkbox-primary1" class="btn btn-default active">
                                            Option A
                                        </label>
                                    </div>                                    
                                </div>
                                <div class="col-md-8">
                                    <textarea type="text" rows="3" ng-model="Option1Text" name="OptionA" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter text for Option A..."> </textarea>
                                </div>
                                <div class="col-md-1">
                                    <input type="text" ng-model="Option1Mark" name="Option1Mark" style="font-weight:bold; color:coral;" class="form-control" placeholder="Mark..">
                                </div>
                            </div> 
                        </div>
                        <div class="bootstrap-timepicker">
                            <div class="form-group">                                
                                <div class="row">
                                    <div class="col-md-2">
                                        <input type="checkbox" ng-model="IsOption2Correct" class="minimal-red" data-toggle="modal" name="fancy-checkbox-primary2" id="fancy-checkbox-primary2" autocomplete="off">
                                        <div class="btn-group pull-right">
                                            <label for="fancy-checkbox-primary2" class="btn btn-primary">
                                                <span class="glyphicon glyphicon-ok"></span>
                                                <span> </span>
                                            </label>
                                            <label for="fancy-checkbox-primary2" class="btn btn-default active">
                                                Option B
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <textarea type="text" rows="3" ng-model="Option2Text" name="OptionB" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter text for Option B..."></textarea>
                                    </div>
                                    <div class="col-md-1">
                                        <input type="text" ng-model="Option2Mark" name="Option1Mark" style="font-weight:bold; color:coral;" class="form-control" placeholder="Mark..">
                                    </div>
                                </div> 
                            </div>
                        </div>
                        <div class="bootstrap-timepicker">
                            <div class="form-group">                                
                                <div class="row">
                                    <div class="col-md-2">
                                        <input type="checkbox" ng-model="IsOption3Correct" class="minimal-red" data-toggle="modal" name="fancy-checkbox-primary3" id="fancy-checkbox-primary3" autocomplete="off">
                                        <div class="btn-group pull-right">
                                            <label for="fancy-checkbox-primary3" class="btn btn-primary">
                                                <span class="glyphicon glyphicon-ok"></span>
                                                <span> </span>
                                            </label>
                                            <label for="fancy-checkbox-primary3" class="btn btn-default active">
                                                Option C
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <textarea type="text" rows="3" ng-model="Option3Text" name="OptionC" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter text for Option C..."></textarea>
                                    </div>
                                    <div class="col-md-1">
                                        <input type="text" ng-model="Option3Mark" name="Option1Mark" style="font-weight:bold; color:coral;" class="form-control" placeholder="Mark..">
                                    </div>
                                </div> 
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-2">
                                    <input type="checkbox" ng-model="IsOption4Correct" class="minimal-red" data-toggle="modal" name="fancy-checkbox-primary4" id="fancy-checkbox-primary4" autocomplete="off">
                                    <div class="btn-group pull-right">
                                        <label for="fancy-checkbox-primary4" class="btn btn-primary">
                                            <span class="glyphicon glyphicon-ok"></span>
                                            <span> </span>
                                        </label>
                                        <label for="fancy-checkbox-primary4" class="btn btn-default active">
                                            Option D
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <textarea type="text" rows="3" ng-model="Option4Text" name="OptionD" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter text for Option D..."></textarea>
                                </div>
                                <div class="col-md-1">
                                    <input type="text" ng-model="Option4Mark" name="Option1Mark" style="font-weight:bold; color:coral;" class="form-control" placeholder="Mark..">
                                </div>
                            </div> 
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                &nbsp;<button type="submit" ng-click="SaveQuestion()" class="btn btn-primary pull-right">Save Question</button> 
                <button type="submit" class="btn btn-default pull-right">Cancel</button>&nbsp;
            </div>
        </div>
    </section>

    @* Popup to Show Program Window *@
    <div class="modal" id="AddProgram" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3 class="text-info">Add Program</h3>
                </div>
                <div class="modal-body" style="margin:0px 10px 0px 10px;">
                    <form class="form-horizontal" name="UpdateEmployeeForm">
                        <div class="form-group">
                            <label class="text-info"> Program Name</label>
                            <input type="text" name="ProgramName" ng-model="ProgramName" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter program name...">
                        </div>
                        <div class="form-group">
                            <label class="text-info"> Program Code</label>
                            <input type="text" name="ProgramCode" ng-model="ProgramCode" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter program code...">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" ng-click="SaveProgram()" id="btnUpdate" data-dismiss="modal">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    @* Popup to Show Program Window *@

</div>