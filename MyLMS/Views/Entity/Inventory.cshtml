
@{
    ViewBag.Title = "Inventory";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}

@section scripts{
    <script src="~/Scripts/AngularControllers/EntityController.js"></script>
}
<div ng-controller="InventoryCntrl">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Inventory
            <small>View your inventory items</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li><a href="#">Inventory</a></li>
            @*<li class="active">Add Course</li>*@
        </ol>
    </section>

    <!-- Form Body (Page body)-->
    <section class="content">
        <div class="box box-default">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="nav-tabs-custom">
                            <!-- Tabs within a box -->
                            <ul class="nav nav-tabs pull-right">
                                <li class="active"><a href="#revenue-chart" data-toggle="tab">Remotes</a></li>
                                <li><a href="#sales-chart" data-toggle="tab">Receivers</a></li>
                                <li class="pull-left header"><i class="fa fa-inbox"></i> Equipments</li>
                            </ul>
                            <div class="tab-content no-padding">
                                <!-- Remotes -->
                                <div class="chart tab-pane active" id="revenue-chart" style="position: relative; height: 300px;">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Sl No.</th>
                                                <th>Remote Shipment Amount</th>
                                                <th>Remote Model</th>
                                                <th>Shipment Date</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="Remote in InvRemList | filter: CourseFilter">
                                                <td>
                                                    {{$index+1}}.
                                                </td>
                                                <td>
                                                    <span>{{Remote.ShipmentAmount}}</span>
                                                </td>
                                                <td>
                                                    <span>{{Remote.RemoteModel}}</span>
                                                </td>
                                                <td>
                                                    <span>{{Remote.OrgShipmentDate}}</span>
                                                </td>
                                                @*<td>
                                                    <button type="button" class="btn btn-success btn-sm" id="btnAddReceiver" ng-click="ReceiveEquipment(Receiver.ReceiverID)"><i class="glyphicon glyphicon-plus"> </i> Send</button>
                                                </td>*@
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                                <!-- Receivers -->
                                <div class="chart tab-pane" id="sales-chart" style="position: relative; height: 300px;">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Sl No.</th>
                                                <th>Receiver Serial No</th>
                                                <th>Receiver Model</th>
                                                <th>Shipment Date</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="Receiver in InvRecList | filter: CourseFilter">
                                                <td>
                                                    {{$index+1}}.
                                                </td>
                                                <td>
                                                    <span>{{Receiver.ReceiverSerialNo}}</span>
                                                </td>
                                                <td>
                                                    <span>{{Receiver.ReceiverModel}}</span>
                                                </td>
                                                <td>
                                                    <span>{{Receiver.OrgShipmentDate}}</span>
                                                </td>
                                                @*<td>
                                                    <button type="button" class="btn btn-success btn-sm" id="btnAddReceiver" ng-click="ReceiveEquipment(Receiver.ReceiverID)"><i class="glyphicon glyphicon-plus"> </i> Send</button>
                                                </td>*@
                                                @*<th>
                                                          <span ng-click="SurveyAttemptReport(Survey.SURVEY_ID)" style="cursor:pointer;" class="fa fa-file-text-o"></span>&nbsp;
                                                    </th>*@
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

