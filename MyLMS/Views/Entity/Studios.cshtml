
@{
    ViewBag.Title = "Studios";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}


@section scripts{
    <script src="~/Scripts/AngularControllers/EntityController.js"></script>
}
<div ng-controller="StudioCntrl">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Studios
            <small>List of all studios</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="/Home"><i class="fa fa-dashboard"></i>Home</a></li>
            <li><a href="#">Studios</a></li>
            @*<li class="active">Add Course</li>*@
        </ol>
    </section>

    <!-- Form Body (Page body)-->
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <div class="pull-left">
                    <button type="button" class="btn btn-dropbox btn-sm" id="btnAddStudio" data-toggle="modal" data-target="#AddStudio"><i class="glyphicon glyphicon-plus"> </i> Add Studio</button>
                </div>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Sl No.</th>
                                    <th>Studio Name</th>
                                    <th>Studio Location</th>
                                    <th>2WC Channel</th>
                                    <th>Remarks</th>
                                    @*<th></th>*@
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="studio in StudioList | filter: CourseFilter">
                                    <td>
                                        {{$index+1}}.
                                    </td>
                                    <td>
                                        <span>{{studio.StudioName}}</span>
                                    </td>
                                    <td>
                                        <span>{{studio.StudioLocation}}</span>
                                    </td>
                                    <td>
                                        <span>{{studio.ChannelName}}</span>
                                    </td>
                                    <td>
                                        <span>{{studio.Remarks}}</span>
                                    </td>                                    
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @* Popup to Show Program Window *@
    <div class="modal" id="AddStudio" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3 class="text-info">Add Studio</h3>
                </div>
                <div class="modal-body" style="margin:0px 10px 0px 10px;">
                    <form class="form-horizontal" name="AddStudioForm">
                        <div class="form-group">
                            <label class="text-info"> Studio Name</label>
                            <input type="text" name="StudioName" ng-model="StudioName" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter studio name...">
                        </div>
                        <div class="form-group">
                            <label class="text-info"> Studio Location</label>
                            <input type="text" name="StudioLocation" ng-model="StudioLocation" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter studio location...">
                        </div>
                        <div class="form-group">
                            <label class="text-info">2WC Channel Name</label>
                            <input type="text" name="ChannelName" ng-model="ChannelName" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter 2WayCall Channel Name for Studio...">
                        </div>
                        <div class="form-group">
                            <label class="text-info"> Remarks</label>
                            <input type="text" name="StudioLocation" ng-model="Remarks" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter remarks if any...">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" ng-click="SaveStudio()" id="btnStudioSave" data-dismiss="modal">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    @* Popup to Show Program Window *@

</div>

