@{
    ViewBag.Title = "ViewCenters";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}

@section scripts{
    <script src="~/Scripts/AngularControllers/HelpdeskController.js"></script>
}
<div ng-controller="HelpdeskCntrl" ng-init="GetMyTickets()">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            View Tickets
            <small>View your tickets</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li><a href="#">View Tickets</a></li>            
        </ol>
    </section>

    <!-- Form Body (Page body)-->
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <div class="pull-left">
                    <div>
                        <button type="button" class="btn btn-success" id="btnViewCenters" data-toggle="modal" data-target="#AddEquipment"><i class="glyphicon glyphicon-plus"> </i>&nbsp; Ship Equipments</button>
                    </div>
                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Sl No.</th>
                                    <th>Ticket Number</th>
                                    <th>Ticket Subject</th>
                                    <th>Created Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="Ticket in TicketsList | filter: TicketFilter">
                                    <td>
                                        {{$index+1}}.
                                    </td>
                                    <td>
                                        <a ng-href="/Helpdesk/TicketDetails/{{Ticket.TicketID}}">
                                            {{Ticket.TicketNumber}}
                                        </a>
                                    </td>
                                    <td>
                                        <span>{{Ticket.TicketSubject}}</span>
                                    </td>
                                    <td>
                                        <span>{{Ticket.CreatedDate}}</span>
                                    </td>
                                    <td>
                                        <span class="{{Ticket.CSSClass}}">{{Ticket.StatusText}}</span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
