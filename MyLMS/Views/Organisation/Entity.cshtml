
@{
    ViewBag.Title = "Entity";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}


@section scripts{
    <script src="~/Scripts/AngularControllers/OrganisationController.js"></script>
}
<div ng-controller="OrganisationCntrl">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            View Entity
            <small>View all Entities</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li><a href="#">Manage Course</a></li>
            @*<li class="active">Add Course</li>*@
        </ol>
    </section>

    <!-- Form Body (Page body)-->
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <div class="pull-left">
                    <button type="button" class="btn btn-dropbox btn-sm" id="btnAddEntity" data-toggle="modal" data-target="#AddEntity"><i class="glyphicon glyphicon-plus"> </i> Add Entity</button>                                        
                </div>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Sl No.</th>
                                    <th>Entity Name</th>
                                    <th>Entity Code</th>
                                    <th>Manager Name</th>
                                    <th>Email</th>
                                    <th>Mobile</th>
                                    <th>Landline</th>
                                    <th>Address</th>                                    
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="Entity in EntityList | filter: CourseFilter">
                                    <td>
                                        {{$index+1}}.
                                    </td>
                                    <td>
                                        <span>{{Entity.EntityName}}</span>
                                    </td>
                                    <td>
                                        <span>{{Entity.EntityCode}}</span>
                                    </td>
                                    <td>
                                        <span>{{Entity.ManagerName}}</span>
                                    </td>
                                    <td>
                                        <span>{{Entity.Email}}</span>
                                    </td>
                                    <td>
                                        <span>{{Entity.Mobile}}</span>
                                    </td>
                                    <td>
                                        <span>{{Entity.Landline}}</span>
                                    </td>
                                    <td>
                                        <span>{{Entity.Address}}</span>
                                    </td>
                                    @*<th>
                                            <span ng-click="SurveyAttemptReport(Survey.SURVEY_ID)" style="cursor:pointer;" class="fa fa-file-text-o"></span>&nbsp;
                                      </th>*@
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @* Popup to Show Program Window *@
    <div class="modal" id="AddEntity" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h3 class="text-info">Add Entity</h3>
                </div>
                <div class="modal-body" style="margin:0px 10px 0px 10px;">
                    <form class="form-horizontal" name="AddEntityForm">
                        <div class="form-group">
                            <label class="text-info"> Entity Name</label>
                            <input type="text" name="EntityName" ng-model="EntityName" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter entity name...">
                        </div>
                        <div class="form-group">
                            <label class="text-info"> Entity Code</label>
                            <input type="text" name="EntityCode" ng-model="EntityCode" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter entity code...">
                        </div>
                        <div class="form-group">
                            <label class="text-info"> Manager Name</label>
                            <input type="text" name="ManagerName" ng-model="ManagerName" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter manager name...">
                        </div>
                        <div class="form-group">
                            <label class="text-info"> Email ID</label>
                            <input type="text" name="Email" ng-model="Email" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter Email ID...">
                        </div>
                        <div class="form-group">
                            <label class="text-info"> Mobile</label>
                            <input type="text" name="Mobile" ng-model="Mobile" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter manager mobile no...">
                        </div>
                        <div class="form-group">
                            <label class="text-info"> Landline</label>
                            <input type="text" name="Landline" ng-model="Landline" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter landline...">
                        </div>
                        <div class="form-group">
                            <label class="text-info"> Address</label>
                            <input type="text" name="Address" ng-model="Address" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter address...">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" ng-click="SaveEntity()" id="btnUpdate" data-dismiss="modal">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    @* Popup to Show Program Window *@  
</div>

