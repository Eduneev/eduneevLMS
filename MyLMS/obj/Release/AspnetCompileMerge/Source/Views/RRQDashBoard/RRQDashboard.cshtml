
@{
    ViewBag.Title = "RRQDashboard";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}

<div ng-controller="QuestionCntrl">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            New Question
            <small>Add new question</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li><a href="#">New Student</a></li>
            @*<li class="active">Add Course</li>*@
        </ol>
    </section>

    <!-- Form Body (Page body)-->
    <section class="content">
        <div class="box box-default">
            <div class="box-header with-border">
                <div class="pull-left">
                    <button type="button" class="btn btn-success" id="btnViewCenters">
                        <i class="glyphicon glyphicon-list"> </i>&nbsp; View Questions
                    </button>
                </div>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Question Text</label>
                            <input type="text" ng-model="QuestionText" name="QuestionText" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter question text...">
                        </div>
                        <div class="form-group">
                            <label>
                                Enter answer text and select correct answer text
                            </label>
                        </div>

                    </div>
                </div>
            </div>
            <div class="box-footer">
                &nbsp;<button type="submit" ng-click="SaveQuestion()" class="btn btn-primary pull-right">Save Question</button>
                <button type="submit" class="btn btn-default pull-right">Cancel</button>&nbsp;
            </div>
        </div>
    </section>
</div>

