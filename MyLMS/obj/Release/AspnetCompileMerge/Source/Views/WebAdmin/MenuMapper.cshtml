
@{
    ViewBag.Title = "MenuMapper";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}



@section scripts{
    <script src="~/Scripts/AngularControllers/CenterController.js"></script>
}
<div ng-controller="CenterCntrl">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Map Menu
            <small>Map Menu with Role</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li><a href="#">New Center</a></li>
            @*<li class="active">Add Course</li>*@
        </ol>
    </section>

    <!-- Form Body (Page body)-->
    <section class="content">
        <div class="box box-default">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Center Name</label>
                            <input type="text" ng-model="CenterName" name="CenterName" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter center name...">
                        </div>
                        <div class="form-group">
                            <label>Center Code</label>
                            <input type="text" ng-model="CenterCode" name="CenterCode" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter center code...">
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                <input type="email" ng-model="Email" class="form-control" placeholder="Email">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Landline 1</label>
                            <input type="text" ng-model="Landline1" name="CenterName" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter center name...">
                        </div>
                        <div class="form-group">
                            <label>Landline 2</label>
                            <input type="text" ng-model="Landline2" name="CenterName" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter center name...">
                        </div>
                        <div class="form-group">
                            <label>Mobile</label>
                            <input type="text" ng-model="Mobile" name="CenterName" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter center name...">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Pin Code</label>
                            <input type="text" ng-model="PinCode" name="CenterName" style="font-weight:bold; color:coral;" class="form-control" placeholder="Enter center name...">
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            <textarea class="form-control" ng-model="Address" rows="4" placeholder="Enter ..."></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" ng-click="SaveCenter()" class="btn btn-primary">Create Center</button>
                <button type="submit" class="btn btn-default">Cancel</button>
            </div>
        </div>
    </section>
</div>



